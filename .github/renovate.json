{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "bump",
  "automerge": true,
  "timezone": "Pacific/Auckland",
  "node": { "enabled": false },
  "ignoreDeps": ["node"],
  "lockFileMaintenance": {
    "enabled": true,
    "schedule": ["after 7am before 9am on friday"]
  },
  "packageRules": [
    {
      "matchPackageNames": ["eslint-formatter-pretty"],
      "allowedVersions": "<6.0.0"
    },
    { "bumpVersion": "patch", "updateTypes": ["patch"] },
    { "bumpVersion": "minor", "updateTypes": ["minor"] },
    { "bumpVersion": "major", "updateTypes": ["major"] }
  ]
}
